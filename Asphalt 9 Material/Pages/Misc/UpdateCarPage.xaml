<UserControl x:Class="Asphalt_9_Materials.UI.Pages.Misc.UpdateCarPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:Asphalt_9_Materials.ViewModel.Converters;assembly=Asphalt9Materials.ViewModel"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignWidth="1360" Height="877">
    <UserControl.Resources>
        <converters:DateConverter x:Key="DateConverter" />
        <converters:ImageConverter x:Key="ThumbnailConverter" 
                                   DecodePixelHeight="75" 
                                   DecodePixelWidth="65"/>
        <converters:ImageConverter x:Key="ImageConverter" 
                                   DecodePixelHeight="570" 
                                   DecodePixelWidth="318"/>
    </UserControl.Resources>
    <Grid>

        <materialDesign:DialogHost Background="{StaticResource DarkerBrush}">

            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanContentScroll="True" Margin="0,0.2,0,0">

                <Grid>

                    <!--Image-->
                    <StackPanel x:Name="ImageStack" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="570" Margin="0" MinHeight="318" MaxWidth="570" MaxHeight="318">
                        <Image 
                            VerticalAlignment="Stretch"
                            Margin="0"
                            Source="{Binding CarImage}" Stretch="Fill" Height="318"
                            />
                        <Button
                            TabIndex="9"
                            Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                            ToolTip="Add Image"
                     
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding AddImage}" Margin="0,-70,20,0"
                            >
                            <materialDesign:PackIcon
                                Kind="EllipsisHorizontal"
                                Height="24"
                                Width="24" />
                        </Button>

                    </StackPanel>

                    <!--Selection Car-->

                    <GroupBox Header="Car To Update" VerticalAlignment="Top" Height="85" Width="782" HorizontalAlignment="Left">
                        <ComboBox 
                            IsTextSearchEnabled="True"
                            IsTextSearchCaseSensitive="False"
                            Foreground="{StaticResource LightBrush}"                
                            ItemsSource="{Binding CarCollection}"
                            SelectedItem="{Binding Car}"  
                            VerticalAlignment="Top" 
                            VerticalContentAlignment="Center" Height="35" 
                            FontFamily="{DynamicResource RajdhaniMedium}" 
                            FontSize="16" HorizontalContentAlignment="Left"
                            Cursor="Hand"
                            ItemsPanel="{StaticResource ItemsPanelTemplate}" Margin="0,0,0,-2">

                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="75" 
                                                 Height="65"
                                                 VerticalAlignment="Center"
                                                 x:Name="CarImage"
                                                 Stroke="{StaticResource SeparatorBrush}"
                                                 StrokeThickness="1">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Image, Converter={StaticResource ThumbnailConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="Name : "
                                                   VerticalAlignment="Center"
                                                   Margin="13 0 0 0"/>
                                        <TextBlock Text="{Binding FullName}"
                                                   VerticalAlignment="Center"
                                                   />
                                        <TextBlock Text=", Class : "
                                                   VerticalAlignment="Center"
                                                   Margin="2 0"/>
                                        <TextBlock Text="{Binding CarClass}"
                                                   VerticalAlignment="Center"
                                                   />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </GroupBox>

                    <!--Car Information-->

                    <GroupBox Header="Car Information"
                              Style="{DynamicResource MaterialDesignGroupBox}"
                              materialDesign:ShadowAssist.ShadowDepth="Depth3"
                              BorderThickness="0"
                              VerticalAlignment="Top" Height="249" HorizontalAlignment="Left" Width="782" Background="Transparent" FontFamily="{DynamicResource RajdhaniBold}" Margin="0,90,0,0">

                        <StackPanel>
                            <StackPanel VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="RenameBox" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding Car.CarBrand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TabIndex="1"
                                        ToolTip="Car brand (like MC Laren)"
                                        materialDesign:HintAssist.Hint="Car Brand" x:Name="CarBrand"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="-5,-10,0,7" Width="315" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}" />
                                    <materialDesign:PackIcon Kind="RenameBox" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding Car.CarName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TabIndex="2"
                                        ToolTip="Name of the car (like Senna)"
                                        materialDesign:HintAssist.Hint="Car Name" x:Name="CarName1"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="315" VerticalAlignment="Center"
                                        Margin="-5, -10, 0, 7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="AlphabetCCircle" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>

                                    <ComboBox
                                        SelectedValue="{Binding Car.CarClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                                        TabIndex="3"
                                        ToolTip="Car class (which class the car is in?)"
                                        materialDesign:HintAssist.Hint="Class"
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                        Margin="-5,-10,0,7"
                                        Width="315"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Foreground="{StaticResource LightBrush}" FontFamily="{DynamicResource RajdhaniBold}" Cursor="Hand" >
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:String}">
                                                <sys:String>D</sys:String>
                                                <sys:String>C</sys:String>
                                                <sys:String>B</sys:String>
                                                <sys:String>A</sys:String>
                                                <sys:String>S</sys:String>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                    <materialDesign:PackIcon Kind="AlphabetTBox" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>

                                    <ComboBox
                                        SelectedValue="{Binding Car.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                                        TabIndex="4"
                                        ToolTip="Type of the car is it epic, rare or uncommon"
                                        materialDesign:HintAssist.Hint="Type"
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                        Margin="-5,-10,0,7"
                                        Width="315"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center "
                                        Foreground="{Binding Foreground}" FontFamily="{DynamicResource RajdhaniBold}" Cursor="Hand">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:String}">
                                                <sys:String>Uncommon</sys:String>
                                                <sys:String>Rare</sys:String>
                                                <sys:String>Epic</sys:String>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Fuel" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <ComboBox
                                        SelectedValue="{Binding Car.Fuel,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                                        TabIndex="5"
                                        ToolTip="Car Fuels (How many fuels the car have)"
                                        materialDesign:HintAssist.Hint="Fuels"
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                        Margin="-5,-10,0,7"
                                        Width="315"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center "
                                        Foreground="{StaticResource LightBrush}" FontFamily="{DynamicResource RajdhaniBold}" Cursor="Hand">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type system:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                                <sys:Int32>6</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                    <materialDesign:PackIcon Kind="AccessTime" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding Car.ReleaseDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TabIndex="6"
                                        ToolTip="Since when the car is released in the game ?"
                                        materialDesign:HintAssist.Hint="Release Date"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Margin="-5,-10,0,7"
                                        Width="300"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center "
                                        Foreground="{StaticResource LightBrush}" HorizontalAlignment="Right" FontFamily="{DynamicResource RajdhaniBold}" />

                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="55">
                                    <materialDesign:PackIcon Kind="GaugeFull" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox 
                                        Text="{Binding Refill, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                        TabIndex="7"
                                        ToolTip="Car Refill Time (how much time the car requires to refill)&#x0a;- For hour(s) eg. 1.20 (1 hour and 20 minutes), 3.40 (3 hours and 40 minutes)&#x0a;- for minutes eg. 15 (15 minutes), 59 (59 minutes)&#x0a;=> in both cases choose Next Option to Min(s) or Hr(s)."
                                        materialDesign:HintAssist.Hint="Refill Time (Like 3.20)"
                                        ToolTipService.ShowDuration="80000"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Margin="-5,2,15,19"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center "
                                        Foreground="{StaticResource LightBrush}" Width="242" FontFamily="{DynamicResource RajdhaniBold}"
                                        />

                                    <ComboBox
                                        SelectedValue="{Binding RefillDetection, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                        ItemsPanel="{StaticResource ItemsPanelTemplate}"
                                        TabIndex="3"
                                        ToolTip="Is provided refill is in hours or minutes !"
                                        materialDesign:HintAssist.Hint=""
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                        Margin="-5,1,0,18"
                                        Width="60"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Foreground="{StaticResource LightBrush}" FontFamily="{DynamicResource RajdhaniBold}" Cursor="Hand" >
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:String}">
                                                <sys:String>Min(s)</sys:String>
                                                <sys:String>Hr(s)</sys:String>
                                            </x:Array>
                                        </ComboBox.ItemsSource>

                                    </ComboBox>

                                    <materialDesign:PackIcon Kind="StarFace" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <materialDesign:RatingBar
                                        TabIndex="8"
                                        ToolTip="Provide the car stars number"
                                        x:Name="CustomRatingBar"
                                        Max="6"
                                        Value="{Binding Car.Stars}"
                                        Margin="50,13,0,10"
                                        Width="193"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center "
                                        Orientation="Horizontal" FontFamily="{DynamicResource RajdhaniSemiBold}" FontSize="14">
                                        <materialDesign:RatingBar.ValueItemTemplate>
                                            <DataTemplate
                                                DataType="system:Int32">
                                                <Grid>
                                                    <materialDesign:PackIcon
                                                        Kind="Star"
                                                        Height="32"
                                                        Width="32" />
                                                    <TextBlock
                                                        Text="{Binding}"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="8"
                                                        Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />
                                                </Grid>
                                            </DataTemplate>
                                        </materialDesign:RatingBar.ValueItemTemplate>
                                    </materialDesign:RatingBar>
                                </StackPanel>

                            </StackPanel>

                        </StackPanel>

                    </GroupBox>

                    <!--Car Performance-->

                    <GroupBox Header="Performance"
                              Style="{DynamicResource MaterialDesignGroupBox}"
                              materialDesign:ShadowAssist.ShadowDepth="Depth3"
                              BorderThickness="0"
                              VerticalAlignment="Top" Height="144" HorizontalAlignment="Left" Width="782" Background="Transparent" Margin="0,345,0,0" FontFamily="{DynamicResource RajdhaniBold}">

                        <StackPanel>
                            <StackPanel VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Speedometer" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding StockTopSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="10"
                                        ToolTip="Car Top Speed at Stock"
                                        materialDesign:HintAssist.Hint="Stock Top Speed"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="-5,-10,0,7" Width="120" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <materialDesign:PackIcon Kind="GaugeFull" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding StockAcceleration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="11"
                                        ToolTip="Car Acceleration at Stock"
                                        materialDesign:HintAssist.Hint="Stock Acceleration"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="120" VerticalAlignment="Center"
                                        Margin="-5, -10, 0, 7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <materialDesign:PackIcon Kind="SearchHandsFree" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding StockHandling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="12"
                                        ToolTip="Car Handling at Stock"
                                        materialDesign:HintAssist.Hint="Stock Handling"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="-5,-10,0,7" Width="120" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <materialDesign:PackIcon Kind="GaugeLow" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding StockNitro, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="13"
                                        ToolTip="Car Nitro at Stock"
                                        materialDesign:HintAssist.Hint="Stock Nitro"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="120" VerticalAlignment="Center"
                                        Margin="-5, -10, 0, 7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Speedometer" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding MaxTopSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="14"
                                        ToolTip="Car Top Speed at Max"
                                        materialDesign:HintAssist.Hint="Max Top Speed"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="-5,-10,0,7" Width="120" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <materialDesign:PackIcon Kind="GaugeFull" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding MaxAcceleration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="15"
                                        ToolTip="Car Acceleration at Max"
                                        materialDesign:HintAssist.Hint="Max Acceleration"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="120" VerticalAlignment="Center"
                                        Margin="-5, -10, 0, 7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <materialDesign:PackIcon Kind="SearchHandsFree" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="10,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding MaxHandling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="16"
                                        ToolTip="Car Handling at Max"
                                        materialDesign:HintAssist.Hint="Max Handling"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="-5,-10,0,7" Width="120" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <materialDesign:PackIcon Kind="GaugeLow" 
                                                             Foreground="{StaticResource LightBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="15,4,20,5"
                                                             Height="42" Width="24"/>
                                    <TextBox
                                        Text="{Binding MaxNitro, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="17"
                                        ToolTip="Car Nitro at Max"
                                        materialDesign:HintAssist.Hint="Max Nitro"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="120" VerticalAlignment="Center"
                                        Margin="-5, -10, 0, 7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                </StackPanel>


                            </StackPanel>

                        </StackPanel>

                    </GroupBox>

                    <!--Car Blueprints-->

                    <GroupBox Header="Blueprints"
                              Style="{DynamicResource MaterialDesignGroupBox}"
                              materialDesign:ShadowAssist.ShadowDepth="Depth3"
                              BorderThickness="0"
                              VerticalAlignment="Top" Height="84" HorizontalAlignment="Right" Width="570" Background="Transparent" Margin="0,320,0,0" FontFamily="{DynamicResource RajdhaniBold}">

                        <StackPanel>
                            <StackPanel VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <TextBox
                                        Text="{Binding FirstStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="18"
                                        ToolTip="Blueprints required for the 1st star (unlocking)."
                                        materialDesign:HintAssist.Hint="1st Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="20,0,0,7" Width="70" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding SecondStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="19"
                                        ToolTip="Blueprints required for the 2nd star"
                                        materialDesign:HintAssist.Hint="2nd Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="70" VerticalAlignment="Center"
                                        Margin="20,0,0,7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding ThirdStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="20"
                                        ToolTip="Blueprints required for the 3rd star"
                                        materialDesign:HintAssist.Hint="3rd Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="20,0,0,7" Width="70" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding FourthStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="21"
                                        ToolTip="Blueprints required for the 4th star"
                                        materialDesign:HintAssist.Hint="4th Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="70" VerticalAlignment="Center"
                                        Margin="20,0,0,7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding FifthStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="22"
                                        ToolTip="Blueprints required for the 5th star"
                                        materialDesign:HintAssist.Hint="5th Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="70" VerticalAlignment="Center"
                                        Margin="20,0,0,7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding SixthStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="23"
                                        ToolTip="Blueprints required for the 6th star"
                                        materialDesign:HintAssist.Hint="6th Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="70" VerticalAlignment="Center"
                                        Margin="20,0,0,7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                </StackPanel>

                            </StackPanel>

                        </StackPanel>

                    </GroupBox>

                    <!--Car Ranks-->

                    <GroupBox Header="Star Ranks"
                              Style="{DynamicResource MaterialDesignGroupBox}"
                              materialDesign:ShadowAssist.ShadowDepth="Depth3"
                              BorderThickness="0"
                              VerticalAlignment="Top" Height="84" HorizontalAlignment="Right" Width="570" Background="Transparent" Margin="0,425,0,0" FontFamily="{DynamicResource RajdhaniBold}">

                        <StackPanel>
                            <StackPanel VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <TextBox
                                        Text="{Binding StockRank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="24"
                                        ToolTip="Car rank at stock"
                                        materialDesign:HintAssist.Hint="Stock Rank"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="10,0,0,7" Width="60" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding FirstStarRank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="25"
                                        ToolTip="Car rank at 1st Star"
                                        materialDesign:HintAssist.Hint="1st Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="20,0,0,7" Width="60" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding SecondStarRank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="26"
                                        ToolTip="Car rank at 2nd Star"
                                        materialDesign:HintAssist.Hint="2nd Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="60" VerticalAlignment="Center"
                                        Margin="20,0,0,7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding ThirdStarRank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="27"
                                        ToolTip="Car rank at 3rd Star"
                                        materialDesign:HintAssist.Hint="3rd Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Margin="20,0,0,7" Width="60" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding FourthStarRank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="28"
                                        ToolTip="Car rank at 4th Star"
                                        materialDesign:HintAssist.Hint="4th Star"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                        Foreground="{StaticResource LightBrush}"
                                        Width="60" VerticalAlignment="Center"
                                        Margin="20,0,0,7" HorizontalContentAlignment="Center" FontFamily="{DynamicResource RajdhaniBold}"/>
                                    <TextBox
                                        Text="{Binding FifthStarRank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        TabIndex="29"
