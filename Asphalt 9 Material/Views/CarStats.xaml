<UserControl x:Class="Asphalt_9_Materials.UI.Views.CarStats"
             x:Name="CarStatsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Asphalt_9_Materials.ViewModel.Converters;assembly=Asphalt9Materials.ViewModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="835"
             MinWidth="835"
             MaxWidth="835"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:DecimalConverter x:Key="DecimalConverter" />
        <converters:RefillMeasurementConverter x:Key="RefillConverter" />
        <converters:ImageConverter x:Key="ImageConverter"
                                   DecodePixelHeight="360"
                                   DecodePixelWidth="835" />
        <converters:NumberSeparator x:Key="NumberSeparator" />
        <converters:AdditionalValuesConverter x:Key="AdditionalValuesConverter" />
        <converters:GetStageTotalNumber x:Key="GetStageTotalNumber" />
        <Style x:Key="TextBlockVal"
               TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Rajdhani Semibold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
        </Style>
    </UserControl.Resources>

    <StackPanel x:Name="ContentStack"
                MinWidth="835"
                MaxWidth="835">
        <StackPanel MinHeight="360"
                    MaxHeight="360"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top">
            <Image Width="835"
                   Height="360"
                   HorizontalAlignment="Stretch"
                   Source="{Binding Car.Image, Converter={StaticResource ImageConverter}}"
                   Stretch="Fill" />
        </StackPanel>
        <Grid x:Name="MainGrid"
              Margin="0">
            <ScrollViewer x:Name="StatsScrollViewer"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Background="{StaticResource DarkerBrush}"
                          CanContentScroll="True"
                          HorizontalScrollBarVisibility="Disabled"
                          IsDeferredScrollingEnabled="True"
                          VerticalScrollBarVisibility="Visible">
                <StackPanel Height="475"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Background="{StaticResource DarkerBrush}"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <!--  #region Information  -->
                    <TextBlock Margin="22,20,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontFamily="Rajdhani Semibold"
                               FontSize="20"
                               Foreground="{StaticResource LightBrush}"
                               Text="Car Informations:" />
                    <StackPanel MinWidth="730"
                                MinHeight="80"
                                MaxWidth="730"
                                MaxHeight="80"
                                Margin="5,15,5,184"
                                VerticalAlignment="Top">
                        <Grid Margin="-30,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39" />
                                <RowDefinition Height="39" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Row="0"
                                       Grid.ColumnSpan="7"
                                       Fill="{StaticResource DarkerBrush}" />
                            <!--  #region Headers  -->
                            <TextBlock Grid.Row="0"
                                       Grid.Column="6"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Release Date" />
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockVal}"
                                           Text="Brand" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockVal}"
                                           Text="Name" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockVal}"
                                           Text="Class" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockVal}"
                                           Text="Type" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="4"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockVal}"
                                           Text="Fuel" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="5"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockVal}"
                                           Text="Refill Time" />
                            </StackPanel>
                            <!--  #endregion  -->
                            <!--  #region Contents  -->
                            <Rectangle Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                       Fill="{StaticResource DarkBrush}" />
                            <TextBlock x:Name="CarBrandTxt"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.CarBrand}" />
                            <TextBlock x:Name="CarNameTxt"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.CarName}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.CarClass}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="3"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="Rajdhani Semibold"
                                       FontSize="14"
                                       Foreground="{Binding Foreground}"
                                       Text="{Binding Car.Type}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="4"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Fuel}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="5"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Refill, Converter={StaticResource RefillConverter}}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="6"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.ReleaseDate}" />
                            <!--  #endregion  -->
                            <!--  #region Borders  -->
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="3"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="4"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="5"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="6"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="7"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="0,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="7"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1" />
                            <!--  #endregion  -->
                        </Grid>
                    </StackPanel>
                    <!--  #endregion  -->
                    <!--  #region Performance  -->
                    <TextBlock Margin="22,-160,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontFamily="Rajdhani Semibold"
                               FontSize="20"
                               Foreground="{StaticResource LightBrush}"
                               Text="Performance Stats:" />
                    <StackPanel MinWidth="730"
                                MinHeight="120"
                                MaxWidth="730"
                                MaxHeight="120"
                                Margin="5,-120,5,0"
                                VerticalAlignment="Top">
                        <Grid Margin="-30,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39" />
                                <RowDefinition Height="39" />
                                <RowDefinition Height="39" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--  Region Car Stats  -->
                            <!--  Stock  -->
                            <Rectangle Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="5"
                                       Fill="{StaticResource DarkerBrush}" />
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="32,18,32,16"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <StackPanel Margin="0,-3,0,-10"
                                            Orientation="Horizontal">
                                    <TextBlock Margin="0,0,0,3"
                                               Style="{StaticResource TextBlockVal}"
                                               Text="Max " />
                                    <TextBlock Margin="0,0,0,3"
                                               Style="{StaticResource TextBlockVal}"
                                               Text="{Binding Car.Stars}" />
                                </StackPanel>
                                <materialDesign:PackIcon Width="28"
                                                         Height="Auto"
                                                         Margin="0,-4,0,-7"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Stretch"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                            </StackPanel>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Top Speed" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="2"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Acceleration" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="3"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Handling" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="4"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Nitro" />
                            <Rectangle Grid.Row="1"
                                       Grid.RowSpan="2"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="5"
                                       Fill="{StaticResource DarkBrush}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Stock" />
                            <TextBlock x:Name="TbSpeedStock"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.StockTopSpeed, Converter={StaticResource DecimalConverter}}" />
                            <TextBlock x:Name="TbAccelStock"
                                       Grid.Row="1"
                                       Grid.Column="2"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.StockAcceleration, Converter={StaticResource DecimalConverter}}" />
                            <TextBlock x:Name="TbHandlStock"
                                       Grid.Row="1"
                                       Grid.Column="3"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.StockHandling, Converter={StaticResource DecimalConverter}}" />
                            <TextBlock x:Name="TbNitroStock"
                                       Grid.Row="1"
                                       Grid.Column="4"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.StockNitro, Converter={StaticResource DecimalConverter}}" />
                            <!--  Max  -->
                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Max" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="1"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.MaxTopSpeed, Converter={StaticResource DecimalConverter}}" />
                            <TextBlock x:Name="Accel"
                                       Grid.Row="2"
                                       Grid.Column="2"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.MaxAcceleration, Converter={StaticResource DecimalConverter}}" />
                            <TextBlock x:Name="Handl"
                                       Grid.Row="2"
                                       Grid.Column="3"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.MaxHandling, Converter={StaticResource DecimalConverter}}" />
                            <TextBlock x:Name="Nitro"
                                       Grid.Row="2"
                                       Grid.Column="4"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Performance.MaxNitro, Converter={StaticResource DecimalConverter}}" />
                            <Border Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="3"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="4"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="0,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="0,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    Margin="0,0,2,0"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1" />
                            <!--  EndRegion  -->
                        </Grid>
                    </StackPanel>
                    <!--  #endregion  -->
                    <!--  #region Ranks  -->
                    <TextBlock Margin="22,20,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontFamily="Rajdhani Semibold"
                               FontSize="20"
                               Foreground="{StaticResource LightBrush}"
                               Text="Car Ranks:" />
                    <StackPanel MinWidth="730"
                                MinHeight="80"
                                MaxWidth="730"
                                MaxHeight="80"
                                Margin="5,20,5,0"
                                VerticalAlignment="Top">
                        <Grid Margin="-30,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39" />
                                <RowDefinition Height="39" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Row="0"
                                       Grid.ColumnSpan="7"
                                       Fill="{StaticResource DarkerBrush}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Stock" />
                            <StackPanel Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="1"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="1"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                                <!--  <materialDesign:PackIcon
                                    
                                    Kind="Star" />  -->
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <materialDesign:PackIcon HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                                <materialDesign:PackIcon HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <materialDesign:PackIcon HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                                <materialDesign:PackIcon HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                                <materialDesign:PackIcon HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="4"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="{Binding Car.Stars}"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="4"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="5"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="{Binding Car.Stars}"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="5"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="6"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="{Binding Car.Stars}"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="6"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                            </StackPanel>
                            <Rectangle Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                       Fill="{StaticResource DarkBrush}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.Stock}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.FirstStar}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.SecondStar}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="3"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.ThirdStar}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="4"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.FourthStar}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="5"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.FifthStar}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="6"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="{Binding Car.Ranks.SixthStar}" />
                            <Border Grid.Row="1"
                                    Grid.Column="0"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="1"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="2"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="3"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="4"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="5"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="1"
                                    Grid.Column="6"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="7"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="0,0,0,1" />
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="7"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1" />
                        </Grid>
                    </StackPanel>
                    <!--  #endregion  -->
                    <!--  #region Blueprints  -->
                    <TextBlock Margin="22,20,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontFamily="Rajdhani Semibold"
                               FontSize="20"
                               Foreground="{StaticResource LightBrush}"
                               Text="Blueprints:" />
                    <StackPanel MinWidth="730"
                                MinHeight="80"
                                MaxWidth="730"
                                MaxHeight="80"
                                Margin="5,20,5,0"
                                VerticalAlignment="Top"
                                RenderTransformOrigin="0.5,0.5">
                        <Grid Margin="-30,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39" />
                                <RowDefinition Height="39" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Row="0"
                                       Grid.ColumnSpan="7"
                                       Fill="{StaticResource DarkerBrush}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="6"
                                       Style="{StaticResource TextBlockVal}"
                                       Text="Total" />
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <materialDesign:PackIcon HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="DarkOrange"
                                                         Kind="Star" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="2"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="2"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="3"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="3"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Viewbox Height="16"
                                         Margin="0,4,0,8"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <materialDesign:RatingBar Value="{Binding Car.Stars}"
                                                              Foreground="DarkOrange"
                                                              IsReadOnly="True"
                                                              Max="4"
                                                              Orientation="Horizontal" />
                                </Viewbox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="4"
